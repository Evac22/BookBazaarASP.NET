@model IEnumerable<Data.Entities.Book>

@{
    ViewBag.Title = "BookList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Список книжок
    </div>

    <div class="panel-body">
        @using (Html.BeginForm("Add", "Admin", FormMethod.Get))
        {
            <div class="pull-left navbar-btn">
                <input type="submit" class="btn btn-primary" value="Додати" />
            </div>
        }
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">
                    Дія
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new {item.Id})
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin", FormMethod.Post))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit" class="btn btn-default btn-xs" value="Видалити" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



